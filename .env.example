# ================================================================
# DOCKER COMPOSE ENVIRONMENT CONFIGURATION
# Copy this file to .env and adjust values for your environment
# ================================================================

# ======================
# Database Configuration
# ======================
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=sistem_akuntansi
DB_PORT=5432

# ======================
# Backend Configuration
# ======================
BACKEND_PORT=8080
ENVIRONMENT=production

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_ACCESS_SECRET=your-access-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key-minimum-32-characters

# Balance & Payment Settings
SKIP_BALANCE_RESET=false
ENABLE_LEGACY_PAYMENT_JOURNALS=true
ENABLE_SSOT_PAYMENT_JOURNALS=true

# ======================
# Frontend Configuration
# ======================
FRONTEND_PORT=3000
NODE_ENV=production

# API URL for frontend to connect to backend
# For Docker internal network, use service name
# For external access, use your domain/IP
NEXT_PUBLIC_API_URL=http://backend:8080

# ======================
# CORS Configuration
# ======================
# Comma-separated list of allowed origins
# Update this with your actual domain in production
ALLOWED_ORIGINS=http://localhost:3000,http://your-domain.com

